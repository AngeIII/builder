{
  "name": {
    "type": "string",
    "access": "protected",
    "value": "Posts"
  },
  "attsCategory": {
    "type": "dropdown",
    "access": "public",
    "value": "",
    "options": {
      "label": "Select category",
      "global": "vcvPostsGridSourcePostCategories"
    }
  },
  "attsOffset": {
    "type": "string",
    "access": "public",
    "value": "",
    "options": {
      "label": "Offset",
      "description": "Display your grid by excluding first x number of posts."
    }
  },
  "attsLimit": {
    "type": "string",
    "access": "public",
    "value": "",
    "options": {
      "label": "Limit",
      "placeholder": "5",
      "description": "Limit the number of posts displayed. Default is 5 posts."
    }
  },
  "attsSticky": {
    "type": "toggle",
    "access": "public",
    "value": false,
    "options": {
      "label": "Add sticky posts",
      "description": "Post grid will take into account sticky posts when building grid."
    }
  },
  "postsGridDataSource": {
    "type": "group",
    "access": "protected",
    "value": [
      "attsCategory",
      "attsOffset",
      "attsLimit",
      "attsSticky"
    ],
    "options": {
      "label": "Posts Grid"
    }
  },
  "metaEditFormTabs": {
    "type": "group",
    "access": "protected",
    "value": [
      "postsGridDataSource"
    ]
  }
}
