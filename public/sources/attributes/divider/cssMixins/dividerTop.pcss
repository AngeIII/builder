#$selector[data-vce-do-apply*="divider"],
#$selector [data-vce-do-apply*="divider"] {
  &[data-vce-do-apply*="$selector"] {
    &.vce-divider-position--top,
    .vce-divider-position--top {
      &.vce-visible-$(device)-only {
        .vce-divider-image-block {
          -webkit-clip-path: rawUrl(#image-$(selector)-$(device)-top);
          clip-path: rawUrl(#image-$(selector)-$(device)-top);
        }

        .vce-divider-video-block {
          -webkit-clip-path: rawUrl(#video-$(selector)-$(device)-top);
          clip-path: rawUrl(#video-$(selector)-$(device)-top);
        }
      }
    }
  }
}
