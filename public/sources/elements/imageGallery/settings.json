{
  "name": {
    "type": "string",
    "access": "protected",
    "value": "Image Gallery"
  },
  "metaIntro": {
    "type": "textarea",
    "access": "protected",
    "value": "Short intro"
  },
  "metaDescription": {
    "type": "textarea",
    "access": "protected",
    "value": "Long description"
  },
  "metaPreviewDescription": {
    "type": "textarea",
    "access": "protected",
    "value": "Image gallery is a basic element for adding simple image gallery from Media Library into the content area."
  },
  "metaPreview": {
    "type": "attachimage",
    "access": "protected",
    "value": "image-gallery-preview.jpg"
  },
  "metaThumbnail": {
    "type": "attachimage",
    "access": "protected",
    "value": "image-gallery-thumbnail.png"
  },
  "image": {
    "type": "attachimage",
    "access": "public",
    "value": [
      "image-gallery-1.jpg",
      "image-gallery-2.jpg",
      "image-gallery-3.jpg",
      "image-gallery-4.jpg",
      "image-gallery-5.jpg",
      "image-gallery-6.jpg"
    ],
    "options": {
      "label": "Images",
      "multiple": true,
      "defaultValue": [
        "image-gallery-1.jpg",
        "image-gallery-2.jpg",
        "image-gallery-3.jpg",
        "image-gallery-4.jpg",
        "image-gallery-5.jpg",
        "image-gallery-6.jpg"
      ],
      "onChange": {
        "rules": {
          "clickableOptions": {
            "rule": "value",
            "options": {
              "value": "url"
            }
          }
        },
        "actions": [
          {
            "action": "attachImageUrls"
          }
        ]
      },
      "url": false
    }
  },
  "shape": {
    "type": "dropdown",
    "access": "public",
    "value": "square",
    "options": {
      "label": "Shape",
      "values": [
        {
          "label": "Square",
          "value": "square"
        },
        {
          "label": "Rounded",
          "value": "rounded"
        },
        {
          "label": "Round",
          "value": "round"
        }
      ]
    }
  },
  "designOptions": {
    "type": "designOptions",
    "access": "public",
    "value": {},
    "options": {
      "label": "Design Options"
    }
  },
  "editFormTab1": {
    "type": "group",
    "access": "protected",
    "value": [
      "image",
      "clickableOptions",
      "columns",
      "gap",
      "shape",
      "customClass"
    ],
    "options": {
      "label": "Image Gallery"
    }
  },
  "metaEditFormTabs": {
    "type": "group",
    "access": "protected",
    "value": [
      "editFormTab1",
      "designOptions"
    ]
  },
  "relatedTo": {
    "type": "group",
    "access": "protected",
    "value": [
      "General"
    ]
  },
  "customClass": {
    "type": "string",
    "access": "public",
    "value": "",
    "options": {
      "label": "Extra class name",
      "description": "Add an extra class name to the element and refer to it from Custom CSS option."
    }
  },
  "clickableOptions": {
    "type": "dropdown",
    "access": "public",
    "value": "lightbox",
    "options": {
      "label": "Click options",
      "values": [
        {
          "label": "None",
          "value": ""
        },
        {
          "label": "Lightbox",
          "value": "lightbox"
        },
        {
          "label": "Open Image in New Tab",
          "value": "imageNewTab"
        },
        {
          "label": "Link selector",
          "value": "url"
        }
      ]
    }
  },
  "assetsLibrary": {
    "access": "public",
    "type": "string",
    "value": [
      "animate"
    ]
  },
  "gap": {
    "type": "number",
    "access": "public",
    "value": "5",
    "options": {
      "label": "Gap",
      "description": "Enter gap in pixels (Example: 5).",
      "cssMixin": {
        "mixin": "imageGalleryGap",
        "property": "gap",
        "namePattern": "[\\da-f]+"
      }
    }
  },
  "columns": {
    "type": "number",
    "access": "public",
    "value": "3",
    "options": {
      "label": "Number of Columns",
      "cssMixin": {
        "mixin": "imageGalleryColumns",
        "property": "columns",
        "namePattern": "[\\da-f]+"
      }
    }
  }
}