{
  "name": {
    "type": "string",
    "access": "protected",
    "value": "Twitter Timeline"
  },
  "metaIntro": {
    "type": "textarea",
    "access": "protected",
    "value": "Short intro"
  },
  "metaDescription": {
    "type": "textarea",
    "access": "protected",
    "value": "Long description"
  },
  "metaPreviewDescription": {
    "type": "textarea",
    "access": "protected",
    "value": "Embedded timeline to display a stream of Tweets on your site. Use it to showcase profiles, lists, and favorites, as well as the stories."
  },
  "metaPreview": {
    "type": "attachimage",
    "access": "protected",
    "value": "twitter-timeline-preview.jpg"
  },
  "metaThumbnail": {
    "type": "attachimage",
    "access": "protected",
    "value": "twitter-timeline-thumbnail.png"
  },
  "designOptions": {
    "type": "designOptions",
    "access": "public",
    "value": {},
    "options": {
      "label": "Design Options"
    }
  },
  "editFormTab1": {
    "type": "group",
    "access": "protected",
    "value": [
      "timelineUrl",
      "width",
      "customClass",
      "customOptions",
      "alignment",
      "tweetCount",
      "tweetTheme"
    ],
    "options": {
      "label": "Twitter Timeline"
    }
  },
  "metaEditFormTabs": {
    "type": "group",
    "access": "protected",
    "value": [
      "editFormTab1",
      "designOptions"
    ]
  },
  "relatedTo": {
    "type": "group",
    "access": "protected",
    "value": [
      "General"
    ]
  },
  "customOptions": {
    "type": "toggle",
    "access": "public",
    "value": false,
    "options": {
      "label": "Custom options"
    }
  },
  "customClass": {
    "type": "string",
    "access": "public",
    "value": "",
    "options": {
      "label": "Extra class name",
      "description": "Add an extra class name to the element and refer to it from Custom CSS option."
    }
  },
  "assetsLibrary": {
    "access": "public",
    "type": "string",
    "value": [
      "animate"
    ]
  },
  "timelineUrl": {
    "type": "string",
    "access": "public",
    "value": "https://twitter.com/Twitter",
    "options": {
      "label": "Twitter timeline URL (Link)"
    }
  },
  "alignment": {
    "type": "dropdown",
    "access": "public",
    "value": "left",
    "options": {
      "label": "Alignment options",
      "values": [
        {
          "label": "Left",
          "value": "left"
        },
        {
          "label": "Center",
          "value": "center"
        },
        {
          "label": "Right",
          "value": "right"
        }
      ],
      "onChange": {
        "rules": {
          "customOptions": {
            "rule": "toggle"
          }
        },
        "actions": [
          {
            "action": "toggleVisibility"
          }
        ]
      }
    }
  },
  "tweetCount": {
    "type": "number",
    "access": "public",
    "value": "5",
    "options": {
      "min": "0",
      "label": "Count of visible tweets",
      "onChange": {
        "rules": {
          "customOptions": {
            "rule": "toggle"
          }
        },
        "actions": [
          {
            "action": "toggleVisibility"
          }
        ]
      }
    }
  },
  "tweetTheme": {
    "type": "dropdown",
    "access": "public",
    "value": "light",
    "options": {
      "label": "Theme",
      "values": [
        {
          "label": "Light",
          "value": "light"
        },
        {
          "label": "Dark",
          "value": "dark"
        }
      ],
      "onChange": {
        "rules": {
          "customOptions": {
            "rule": "toggle"
          }
        },
        "actions": [
          {
            "action": "toggleVisibility"
          }
        ]
      }
    }
  },
  "width": {
    "type": "string",
    "access": "public",
    "value": "500px",
    "options": {
      "label": "Width",
      "description": "Enter width in pixels. Minimal width 220px (Example: 220px)."
    }
  },
  "metaDisableInteractionInEditor": {
    "type": "toggle",
    "access": "protected",
    "value": true
  }
}