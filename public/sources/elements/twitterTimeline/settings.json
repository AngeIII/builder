      "values": [
        {
          "label": "Light",
          "value": "light"
        },
        {
          "label": "Dark",
          "value": "dark"
        }
      ],
      "onChange": {
        "customOptions": [
          {
            "rule": "toggle",
            "actions": [
              {
                "action": "toggleVisibility"
              }
            ]
          }
        ]
      }
    }
