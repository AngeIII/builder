{
  "name": {
    "type": "string",
    "access": "protected",
    "value": "Posts Grid: Post Description"
  },
  "metaIntro": {
    "type": "textarea",
    "access": "protected",
    "value": "Short intro"
  },
  "metaDescription": {
    "type": "textarea",
    "access": "protected",
    "value": "Long description"
  },
  "metaPreviewDescription": {
    "type": "textarea",
    "access": "protected",
    "value": "Medium preview description"
  },
  "metaPreview": {
    "type": "attachimage",
    "access": "protected",
    "value": "preview.jpg"
  },
  "metaThumbnail": {
    "type": "attachimage",
    "access": "protected",
    "value": "thumbnail.jpg"
  },
  "gap": {
    "type": "number",
    "access": "public",
    "value": "5",
    "options": {
      "label": "Gap",
      "description": "Enter gap in pixels (Example: 5).",
      "cssMixin": {
        "mixin": "postsGridGap",
        "property": "gap"
      }
    }
  },
  "columns": {
    "type": "number",
    "access": "public",
    "value": "3",
    "options": {
      "label": "Number of Columns",
      "cssMixin": {
        "mixin": "postsGridColumns",
        "property": "columns"
      }
    }
  },
  "atts_pagination": {
    "type": "toggle",
    "access": "public",
    "value": false,
    "options": {
      "label": "Enable paging"
    }
  },
  "atts_pagination_per_page": {
    "type": "string",
    "access": "public",
    "value": "10",
    "options": {
      "label": "Items per page",
      "onChange": {
        "rules": {
          "atts_pagination": {
            "rule": "toggle"
          }
        },
        "actions": [
          {
            "action": "toggleVisibility"
          }
        ]
      }
    }
  },
  "atts_pagination_color": {
    "type": "color",
    "access": "public",
    "value": "#EEE",
    "options": {
      "label": "Pagination base color",
      "onChange": {
        "rules": {
          "atts_pagination": {
            "rule": "toggle"
          }
        },
        "actions": [
          {
            "action": "toggleVisibility"
          }
        ]
      },
      "cssMixin": {
        "mixin": "postsGridPaginationColor",
        "property": "baseColor",
        "namePattern": "[\\da-f]+"
      }
    }
  },
  "atts_pagination_active_color": {
    "type": "color",
    "access": "public",
    "value": "#557CBF",
    "options": {
      "label": "Pagination active color",
      "onChange": {
        "rules": {
          "atts_pagination": {
            "rule": "toggle"
          }
        },
        "actions": [
          {
            "action": "toggleVisibility"
          }
        ]
      },
      "cssMixin": {
        "mixin": "postsGridPaginationColor",
        "property": "activeColor",
        "namePattern": "[\\da-f]+"
      }
    }
  },
  "postsGrid": {
    "type": "group",
    "access": "protected",
    "value": [
      "columns",
      "gap",
      "metaCustomId",
      "customClass"
    ],
    "options": {
      "label": "Posts Grid"
    }
  },
  "pagination": {
    "type": "group",
    "access": "protected",
    "value": [
      "atts_pagination",
      "atts_pagination_per_page",
      "atts_pagination_color",
      "atts_pagination_active_color"
    ],
    "options": {
      "label": "Pagination"
    }
  },
  "sourceItem": {
    "type": "element",
    "access": "public",
    "value": {
      "tag": "postsGridDataSourcePost"
    },
    "options": {
      "category": "_postsGridSources",
      "label": "Data Source",
      "replaceView": "dropdown",
      "merge": {
        "attributes": [
          {
            "key": "attsOffset",
            "type": "string"
          },
          {
            "key": "attsLimit",
            "type": "string"
          }
        ]
      }
    }
  },
  "gridItem": {
    "type": "element",
    "access": "public",
    "value": {
      "tag": "postsGridItemPostDescription"
    },
    "options": {
      "_category": "postsGridItems",
      "label": "Grid Item"
    }
  },
  "designOptions": {
    "type": "designOptions",
    "access": "public",
    "value": {},
    "options": {
      "label": "Design Options"
    }
  },
  "metaEditFormTabs": {
    "type": "group",
    "access": "protected",
    "value": [
      "postsGrid",
      "sourceItem",
      "pagination",
      "gridItem",
      "designOptions"
    ]
  },
  "relatedTo": {
    "type": "group",
    "access": "protected",
    "value": [
      "General"
    ]
  },
  "metaCustomId": {
    "type": "customId",
    "access": "public",
    "value": "",
    "options": {
      "label": "Element ID",
      "description": "Apply unique Id to element to link directly to it by using #your_id (for element id use lowercase input only)."
    }
  },
  "customClass": {
    "type": "string",
    "access": "public",
    "value": "",
    "options": {
      "label": "Extra class name",
      "description": "Add an extra class name to the element and refer to it from Custom CSS option."
    }
  }
}
