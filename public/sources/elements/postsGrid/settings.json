{
  "name": {
    "type": "string",
    "access": "protected",
    "value": "Posts Grid: Post Description"
  },
  "metaIntro": {
    "type": "textarea",
    "access": "protected",
    "value": "Short intro"
  },
  "metaDescription": {
    "type": "textarea",
    "access": "protected",
    "value": "Long description"
  },
  "metaPreviewDescription": {
    "type": "textarea",
    "access": "protected",
    "value": "Medium preview description"
  },
  "metaPreview": {
    "type": "attachimage",
    "access": "protected",
    "value": "preview.jpg"
  },
  "metaThumbnail": {
    "type": "attachimage",
    "access": "protected",
    "value": "thumbnail.jpg"
  },
  "gridItem": {
    "type": "element",
    "access": "public",
    "value": {
      "tag": "gridItemPostDescription"
    },
    "options": {
      "label": "Grid Item"
    }
  },
  "designOptions": {
    "type": "designOptions",
    "access": "public",
    "value": {},
    "options": {
      "label": "Design Options"
    }
  },
  "postsGrid": {
    "type": "group",
    "access": "protected",
    "value": [
      "columns",
      "gap"
    ],
    "options": {
      "label": "Posts Grid"
    }
  },
  "metaEditFormTabs": {
    "type": "group",
    "access": "protected",
    "value": [
      "postsGrid",
      "gridItem",
      "designOptions"
    ]
  },
  "relatedTo": {
    "type": "group",
    "access": "protected",
    "value": [
      "General"
    ]
  },
  "gap": {
    "type": "number",
    "access": "public",
    "value": "5",
    "options": {
      "label": "Gap",
      "description": "Enter gap in pixels (Example: 5).",
      "cssMixin": {
        "mixin": "postsGridGap",
        "property": "gap",
        "namePattern": "[\\da-f]+"
      }
    }
  },
  "columns": {
    "type": "number",
    "access": "public",
    "value": "3",
    "options": {
      "label": "Number of Columns",
      "cssMixin": {
        "mixin": "postsGridColumns",
        "property": "columns",
        "namePattern": "[\\da-f]+"
      }
    }
  }
}
