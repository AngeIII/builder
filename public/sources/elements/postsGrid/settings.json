{
  "name": {
    "type": "string",
    "access": "protected",
    "value": "Posts Grid: Post Description"
  },
  "metaIntro": {
    "type": "textarea",
    "access": "protected",
    "value": "Short intro"
  },
  "metaDescription": {
    "type": "textarea",
    "access": "protected",
    "value": "Long description"
  },
  "metaPreviewDescription": {
    "type": "textarea",
    "access": "protected",
    "value": "Medium preview description"
  },
  "metaPreview": {
    "type": "attachimage",
    "access": "protected",
    "value": "preview.jpg"
  },
  "metaThumbnail": {
    "type": "attachimage",
    "access": "protected",
    "value": "thumbnail.jpg"
  },
  "atts_postType": {
    "type": "dropdown",
    "access": "public",
    "value": "",
    "options": {
      "label": "Data Type",
      "values": [],
      "global": "vcvPostsGridPostTypes"
    }
  },
  "atts_customQuery": {
    "type": "string",
    "access": "public",
    "value": "",
    "options": {
      "label": "Custom Query",
      "onChange": {
        "rules": {
          "atts_postType": {
            "rule": "value",
            "options": {
              "value": "custom"
            }
          }
        },
        "actions": [
          {
            "action": "toggleVisibility"
          }
        ]
      }
    }
  },
  "atts_ids": {
    "type": "string",
    "access": "public",
    "value": "",
    "options": {
      "label": "List of Ids",
      "onChange": {
        "rules": {
          "atts_postType": {
            "rule": "value",
            "options": {
              "value": "ids"
            }
          }
        },
        "actions": [
          {
            "action": "toggleVisibility"
          }
        ]
      }
    }
  },
  "atts_offset": {
    "type": "string",
    "access": "public",
    "value": "",
    "options": {
      "label": "Offset",
      "onChange": {
        "rules": {
          "atts_postType": {
            "rule": "!valueIn",
            "options": {
              "values": [
                "custom",
                "ids"
              ]
            }
          }
        },
        "actions": [
          {
            "action": "toggleVisibility"
          }
        ]
      }
    }
  },
  "atts_limit": {
    "type": "string",
    "access": "public",
    "value": "",
    "options": {
      "label": "Limit",
      "onChange": {
        "rules": {
          "atts_postType": {
            "rule": "!valueIn",
            "options": {
              "values": [
                "custom",
                "ids"
              ]
            }
          }
        },
        "actions": [
          {
            "action": "toggleVisibility"
          }
        ]
      }
    }
  },
  "gridItem": {
    "type": "element",
    "access": "public",
    "value": {
      "tag": "gridItemPostDescription"
    },
    "options": {
      "label": "Grid Item"
    }
  },
  "designOptions": {
    "type": "designOptions",
    "access": "public",
    "value": {},
    "options": {
      "label": "Design Options"
    }
  },
  "postsGrid": {
    "type": "group",
    "access": "protected",
    "value": [
      "atts_postType",
      "atts_customQuery",
      "atts_ids",
      "atts_offset",
      "atts_limit",
      "columns",
      "gap"
    ],
    "options": {
      "label": "Posts Grid"
    }
  },
  "metaEditFormTabs": {
    "type": "group",
    "access": "protected",
    "value": [
      "postsGrid",
      "gridItem",
      "designOptions"
    ]
  },
  "relatedTo": {
    "type": "group",
    "access": "protected",
    "value": [
      "General"
    ]
  },
  "gap": {
    "type": "number",
    "access": "public",
    "value": "5",
    "options": {
      "label": "Gap",
      "description": "Enter gap in pixels (Example: 5).",
      "cssMixin": {
        "mixin": "postsGridGap",
        "property": "gap",
        "namePattern": "[\\da-f]+"
      }
    }
  },
  "columns": {
    "type": "number",
    "access": "public",
    "value": "3",
    "options": {
      "label": "Number of Columns",
      "cssMixin": {
        "mixin": "postsGridColumns",
        "property": "columns",
        "namePattern": "[\\da-f]+"
      }
    }
  }
}
