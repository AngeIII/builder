{
  "name": {
    "type": "string",
    "access": "protected",
    "value": "Posts Grid: Post Description"
  },
  "metaIntro": {
    "type": "textarea",
    "access": "protected",
    "value": "Short intro"
  },
  "metaDescription": {
    "type": "textarea",
    "access": "protected",
    "value": "Long description"
  },
  "metaPreviewDescription": {
    "type": "textarea",
    "access": "protected",
    "value": "Medium preview description"
  },
  "metaPreview": {
    "type": "attachimage",
    "access": "protected",
    "value": "preview.jpg"
  },
  "metaThumbnail": {
    "type": "attachimage",
    "access": "protected",
    "value": "thumbnail.jpg"
  },
  "gap": {
    "type": "number",
    "access": "public",
    "value": "5",
    "options": {
      "label": "Gap",
      "description": "Enter gap in pixels (Example: 5).",
      "cssMixin": {
        "mixin": "postsGridGap",
        "property": "gap",
        "namePattern": "[\\da-f]+"
      }
    }
  },
  "columns": {
    "type": "number",
    "access": "public",
    "value": "3",
    "options": {
      "label": "Number of Columns",
      "cssMixin": {
        "mixin": "postsGridColumns",
        "property": "columns",
        "namePattern": "[\\da-f]+"
      }
    }
  },
  "atts_pagination": {
    "type": "toggle",
    "access": "public",
    "value": false,
    "options": {
      "label": "Enable paging"
    }
  },
  "atts_pagination_per_page": {
    "type": "string",
    "access": "public",
    "value": "10",
    "options": {
      "label": "Items per page",
      "onChange": {
        "rules": {
          "atts_pagination": {
            "rule": "toggle"
          }
        },
        "actions": [
          {
            "action": "toggleVisibility"
          }
        ]
      }
    }
  },
  "atts_pagination_color": {
    "type": "color",
    "access": "public",
    "value": "",
    "options": {
      "label": "Pagination Color",
      "onChange": {
        "rules": {
          "atts_pagination": {
            "rule": "toggle"
          }
        },
        "actions": [
          {
            "action": "toggleVisibility"
          }
        ]
      }
    }
  },
  "postsGrid": {
    "type": "group",
    "access": "protected",
    "value": [
      "columns",
      "gap",
      "atts_pagination",
      "atts_pagination_per_page",
      "atts_pagination_color"
    ],
    "options": {
      "label": "Posts Grid"
    }
  },
  "sourceItem": {
    "type": "element",
    "access": "public",
    "value": {
      "tag": "postsGridDataSourcePost"
    },
    "options": {
      "category": "_postsGridSources",
      "label": "Data Source",
      "replaceView": "dropdown",
      "merge": {
        "attributes": [
          {
            "key": "attsOffset",
            "type": "string"
          },
          {
            "key": "attsLimit",
            "type": "string"
          }
        ]
      }
    }
  },
  "gridItem": {
    "type": "element",
    "access": "public",
    "value": {
      "tag": "postsGridItemPostDescription"
    },
    "options": {
      "_category": "postsGridItems",
      "label": "Grid Item"
    }
  },
  "designOptions": {
    "type": "designOptions",
    "access": "public",
    "value": {},
    "options": {
      "label": "Design Options"
    }
  },
  "metaEditFormTabs": {
    "type": "group",
    "access": "protected",
    "value": [
      "postsGrid",
      "sourceItem",
      "gridItem",
      "designOptions"
    ]
  },
  "relatedTo": {
    "type": "group",
    "access": "protected",
    "value": [
      "General"
    ]
  }
}
